@{
    Layout = "_AuthLayout";
}

<section class="auth-card" aria-label="Email Activated">
    <div class="brand">PhotoLite</div>
    <div style="text-align: center; padding: var(--space-3) 0;">
        <div
            style="width: 80px; height: 80px; margin: 0 auto var(--space-3); background: #e8f5e9; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
            <i class="fas fa-check-circle" style="font-size: 3rem; color: #4caf50;"></i>
        </div>
        <h2 style="margin: 0 0 var(--space-2); font-size: 1.5rem; font-weight: 600; color: var(--text-color);">Email
            Activated Successfully!</h2>
        <p style="color: var(--muted-text); line-height: 1.6; margin-bottom: var(--space-2);">
            Your email address has been successfully activated. Your account is now fully active and ready to use.
        </p>
        <div
            style="background-color: #E8F8F5; border-left: 4px solid #27AE60; padding: 12px 16px; margin: var(--space-2) 0; border-radius: 4px; text-align: left;">
            <p style="color: #1E8449; font-size: 0.9375rem; margin: 0; margin-bottom: 8px;"><strong>✓ Account
                    Status:</strong> Active</p>
            <p style="color: #1E8449; font-size: 0.9375rem; margin: 0;"><strong>✓ Email Verified:</strong> Yes</p>
        </div>
        <p style="color: var(--muted-text); line-height: 1.6; margin-bottom: var(--space-3);">
            You can now access all features of our platform. Click the button below to log in to your account.
        </p>
    </div>
    <div class="form-actions" style="margin-top: var(--space-3);">
        <a href="login.html" class="btn" style="width:100%; text-align: center; display: block;">
            Go to Login
        </a>
    </div>
</section>